# LangSmith Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=opensca-agent

# LLM Provider API Keys (choose one or more)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenSCA Agent Configuration
OPENSCA_CACHE_DIR=~/.opensca-cache/agent
OPENSCA_DEFAULT_TTL=48h
OPENSCA_DEFAULT_CONCURRENCY=8
OPENSCA_PROXY_URL=
OPENSCA_TLS_VERIFY=true

# Evidence Sources Configuration
ENABLE_NVD=true
ENABLE_GHSA=true
ENABLE_VENDOR_ADVISORIES=true
ENABLE_GITHUB_COMMITS=true
ENABLE_POC_SOURCES=true

# Rate Limiting
GITHUB_API_TOKEN=your_github_token_here
NVD_API_KEY=your_nvd_api_key_here